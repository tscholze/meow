<%= content_tag :p do %>
    Permalink: <%= link_to cat_url(@cat), cat_url(@cat) %>
<% end %>
<%= content_tag :div, :class => 'cat cat_single' do %>
  <%= image_tag '/cats/full/' + @cat.filename %>
<% end %>
<% if session[:user] %>
  <%= content_tag :p do %>
    Admin:
    <%= link_to 'X', @cat, :method => :delete, :confirm => 'are you sure?' %>
  <% end %>
<% end %>
