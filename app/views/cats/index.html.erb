<% @cats.each do |cat| %>
  <%= content_tag :div, :class => 'cat cat_thumbnail' do %>
    <%= content_tag :div, :class => 'image' do %>
        <%= link_to cat_path(cat) do %>
            <%= image_tag cat.filename_thumb , :data => { :full => cat.filename_full} %>
        <% end %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :div, '', :class => 'clear' %>
